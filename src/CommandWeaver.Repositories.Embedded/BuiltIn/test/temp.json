{
  "commands": [
    {
      "name": "help",
      "description": "this screen",
      "parameters": [
        {
          "key": "command",
          "description": "Name of command"
        }
      ],
      "operations": [
        {
          "operation": "output",
          "value": "Command-Weaver by [[{{styles[focused].value}}]]Marek Starosielec\r\n",
          "styling": "MarkupLine"
        },
        {
          "comment": "Build list of categories",
          "operation": "listGroup",
          "list": "{{ commands }}",
          "property": "definition.category",
          "saveTo": "commandCategories"
        },
        {
          "operation": "forEach",
          "list": "{{ commandCategories }}",
          "element": "commandCategory",
          "conditions": {
            "isNull": "{{ command }}"
          },
          "operations": [
            {
              "operation": "output",
              "value": "{{commandCategory}}",
              "styling": "MarkupLine",
              "conditions": {
                "isNotNull": "{{ commandCategory }}"
              }
            }
          ]
        },
        {
          "operation": "forEach",
          "list": "{{ commands }}",
          "element": "currentCommand",
          "conditions": {
            "isNull": "{{ command }}"
          },
          "operations": [
            {
              "operation": "block",
              "operations": [
                {
                  "operation": "output",
                  "value": " {{ currentCommand.definition.category }} [[{{styles[focused].value}}]]{{ currentCommand.definition.name }}[[/]]",
                  "styling": "Markup"
                },
                {
                  "operation": "output",
                  "value": " - {{ currentCommand.definition.description }}",
                  "styling": "Markup",
                  "conditions": {
                    "isNotNull": "{{ currentCommand.definition.description }}"
                  }
                },
                {
                  "operation": "output",
                  "value": " ",
                  "styling": "MarkupLine"
                }
              ]
            }
          ]
        },
        {
          "operation": "output",
          "value": "\r\nTo display additional help about specific command, use command [[{{styles[focused].value}}]]help --command [[{{styles[focused].value}},italic]]<command-name>",
          "styling": "Markup",
          "conditions": {
            "isNull": "{{ command }}"
          }
        },
        {
          "operation": "output",
          "value": "Usage: [[{{styles[focused].value}}]] {{ commands[{{command}}].definition.name }}",
          "styling": "Markup",
          "conditions": {
            "isNotNull": "{{ command }}"
          }
        },
        {
          "operation": "forEach",
          "list": "{{ commands[{{command}}].parameters }}",
          "element": "commandParameter",
          "conditions": {
            "isNotNull": "{{ commands[{{command}}].parameters }}"
          },
          "operations": [
            {
              "operation": "output",
              "value": " --{{commandParameter.key}}",
              "styling": "Markup"
            }
          ]
        }
      ]
    }
  ]
}